---
const navItems = [
  { name: "Inicio", href: "#start" },
  { name: "Sobre mí", href: "#about" },
  { name: "Proyectos", href: "#projects" },
  { name: "Contacto", href: "#contact" },
];
---

<nav class="bg-white/80 backdrop-blur shadow-smooth fixed top-0 w-full z-50 border-b border-smooth">
  <div class="max-w-7xl mx-auto px-6 py-3 flex justify-between items-center">
    <a href="#start" class="text-2xl font-bold text-blue-700 tracking-tight">Josué Flores</a>
    <ul class="flex gap-8 text-base font-medium text-gray-700">
      {
        navItems.map((item) => (
          <li>
            <a href={item.href} class="hover:text-blue-600 transition-colors px-2 py-1 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-200">
              {item.name}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</nav>
