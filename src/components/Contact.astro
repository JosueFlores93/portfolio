<section id="contact" class="bg-white/90 py-20 px-4 rounded-smooth shadow-smooth mx-2">
  <div class="max-w-2xl mx-auto text-center">
    <h2 class="text-4xl font-bold text-gray-900 mb-6">Contáctame</h2>
    <p class="text-gray-700 mb-10">
      Si tienes alguna pregunta, proyecto o propuesta, estoy disponible para conversar.
    </p>
    <form
      id="contact-form"
      class="bg-white p-8 rounded-smooth shadow-smooth space-y-6 max-w-xl mx-auto text-left border-smooth"
    >
      <div>
        <label for="name" class="block mb-2 font-medium text-gray-700">Nombre</label>
        <input
          type="text"
          id="name"
          name="name"
          required
          class="w-full border border-smooth rounded-smooth px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-200"
        />
      </div>
      <div>
        <label for="email" class="block mb-2 font-medium text-gray-700">Correo electrónico</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full border border-smooth rounded-smooth px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-200"
        />
      </div>
      <div>
        <label for="message" class="block mb-2 font-medium text-gray-700">Mensaje</label>
        <textarea
          id="message"
          name="message"
          rows="5"
          required
          class="w-full border border-smooth rounded-smooth px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-200"
        ></textarea>
      </div>
      <button
        type="submit"
        class="w-full btn bg-blue-700 text-white font-semibold px-4 py-2 hover:bg-blue-800 shadow-smooth"
      >Enviar</button>
      <p id="form-status" class="mt-4 text-sm text-center"></p>
    </form>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("contact-form") as HTMLFormElement;
    const status = document.getElementById("form-status");

    const formUrl = "https://formspree.io/f/mnnvpozj";

    if (!form || !status) return;
    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      status.textContent = "Enviando...";

      const formData = new FormData(form);

      try {
        const response = await fetch(formUrl, {
          method: "POST",
          headers: {
            Accept: "application/json",
          },
          body: formData,
        });
        if (response.ok) {
          form.reset();
          status.textContent = "Mensaje enviado correctamente";
          status.className = "text-green-600 mt-4";
        } else {
          throw new Error("Error en el envío");
        }
      } catch (error) {
        status.textContent =
          "Ocurrió un error en el envío. Por favor intenta nuevamente.";
        status.className = "text-red-600 mt-4";
      }
    });
  });
</script>
